<div class="row">
	<div class="col-md-10 offset-1">
		<div class="heading">
			<div class="heading-text">Direct Message</div>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-10 offset-1">
		<table class="table DM">
			<thead>
				<tr>
					<th></th>
					<th>名前</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
			<% @entries.each do |entry| %>
				<tr>
					<td><%= attachment_image_tag entry.user, :image, format: 'jpeg', fallback: "noimg.jpg", size: "100x100", class: "rounded-circle" %></td>
					<td><%= link_to entry.user.user_name, user_path(entry.user) %></td>
					<td>
						<%= link_to room_path(entry.room) do %>
						    <i class="far fa-envelope"></i>
						<% end %>
					</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>