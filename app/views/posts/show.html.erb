<div class="row">
	<div class="col-10 offset-1">
		<div class="heading">
			<h1 class="heading_text">Write by <%= @post.user.user_name %></h1>
		</div>
	</div>
	<div class="left_bar col-3 offset-1">
		<h3><%= @post.country %></h3>
        <!-- ユーザーの画像、ユーザー名 -->
		<table class="table table-borderless">
			<tbody>
				<tr>
					<th><%= attachment_image_tag @post.user, :image, format: 'jpeg', fallback: "noimg.jpg", size: "100x100", class: "rounded-circle" %></th>
				</tr>
			    <tr>
		        	<th>Went to the day/日程</th>
		        </tr>
			    <tr>
			    	<td><%= @post.start_date.strftime('%Y/%m/%d') %> ~ <%= @post.finish_date.strftime('%Y/%m/%d') %></td>
			    </tr>
			    <tr>
			    	<th>Price/費用</th>
			    </tr>
			    <tr>
			    	<td><%= @post.price.to_s(:delimited) %>円</td>
			    </tr>
		    </tbody>
		</table>

	</div>

    <!-- place,post_images表示 -->
	<div class="right_bar col-7 offset-1">
		<table class="table table-borderless">
			<tbody>
		        <tr>
		        	<th>Place/行先</th>
		        </tr>
		        <tr>
		        	<td><%= @post.place %></td>
		        </tr>
		        <tr>
		        	<th>Review/レビュー</th>
		        </tr>
		        <tr>
		        	<td><%= @post.body %></td>
		        </tr>
		    </tbody>
		</table>
		<% @post.post_images.each do |postimage| %>
		    <div class="image_list">
		    	<%= attachment_image_tag postimage, :image, format: 'jpeg', fallback: "noimg.jpg", size: "180x180" %>
		    </div>
		<% end %>
		<div class="far-group">

		    <%= link_to post_path(@post.id) do %>
		        <i class="far fa-comment-alt"></i>
		        <%= @post.post_comments.count %>
            <% end %>

		    <% if @post.favorited_by?(current_user) %>
		        <%= link_to post_favorites_path(@post.id), method: :delete do %>
		            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		            <%= @post.favorites.count %>
		        <% end %>
		    <% else %>
		        <%= link_to post_favorites_path(@post.id), method: :post do %>
		            <i class="fa fa-heart-o" aria-hidden="true"></i>
		            <%= @post.favorites.count %>
		        <% end %>
		    <% end %>

		    <%= link_to edit_post_path(@post.id) do %>
		        <i class="fas fa-cog"></i>
		    <% end %>

		    <%= link_to post_path(@post.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} do %>
		        <i class="fas fa-trash-alt"></i>
		    <% end %>
		</div>

	</div>

    <div class="col-10 offset-2">
	    <div class="comment-form">
			<%= form_for [@post, @post_comment] do |f| %>
			    <%= f.text_area :comment, size: "50x2" %>
			    <%= f.submit '送信', class: 'btn-sm btn-primary' %>
			<% end %>
		</div>
		<table class="table table-borderless">
			<% @post_comments.each do |post_comment| %>
			    <tr>
			    	<th>
			    		<%= attachment_image_tag post_comment.user, :image, format: 'jpeg', fallback: "noimg.jpg", size: "80x80", class: "rounded-circle" %><br>
			    		<%= post_comment.user.account_name %>
			    	</th>
			    	<td>
			    		<%= post_comment.comment %>
			    		<% if current_user == post_comment.user %>
			    		    <%= link_to "削除", post_post_comment_path(@post, post_comment), method: :delete %>
			    		<% end %>
			    	</td>
			    </tr>
		    <% end %>
		</table>
	</div>
</div>