<br><br><div class="row">
	<div class="col-md-6">
		<%= form_for(@post, url: posts_path, html: {method: :post}) do |f| %>
		    <div class="field">
		    	<%= f.label :cuntry, "国内or海外" %>
		    	<%= select :post, :cuntry, Post.cuntries.keys.to_a, include_blank: "選択してください" %>
		    </div>
		    <div class="field">
		    	<%= f.label :place, "Place/行先" %>
		    	<%= f.text_field :place %>
		    </div>
		    <div class="field">
		    	<%= f.label :body, "レビュー" %>
		    	<%= f.text_area :body %>
		    </div>
		    <div class="field">
		    	<h3>day/日程</h3>
		    </div>
		    <div class="field">
		    	<%= date_field_tag :start_date, {} %> ~
		    	<%= date_field_tag :finish_date, {} %>
		    </div>
		    <div class="field">
		    	<%= f.label :price, "price/費用" %>
		    	<%= f.text_field :price %>
		    </div>
		    <div class="field">
		        <%= f.fields_for :post_images do |i| %>
		            <%= i.label :post_image %>
		            <%= i.file_field :image, multiple: true %>
		            

		        <% end %>
		    </div>
		    <div class="actions">
		    	<%= f.submit "送信" %>
		    </div>
		<% end %>
	</div>
</div>