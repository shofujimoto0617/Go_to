<div class="row">
	<% @posts.each do |post| %>
	    <!-- 仮でレイアウト -->
		<div class="col-xs-3">
			<!-- ユーザー画像とユーザー名　表示 -->
		    <table class="table table-hover table-inverse">
		    	<tr><th><%= attachment_image_tag post.user, :image, format: 'jpeg', fallback: "noimg.jpg", size: "60x60", class: "img-circle" %></th></tr>
		        <tr><th><%= post.user.user_name %></th></tr>
		    </table>
		</div>
		<div class="col-xs-9">
			<!-- place,body,post_images　表示 -->
		    <table class="table table-hover table-inverse">
		    	<tr><th><%= link_to post.place, post_path(post.id) %></th></tr>
		        <tr><th><%= post.body %></th></tr>
		    <% post.post_images.each do |postimage| %>
		        <tr><th><%= attachment_image_tag postimage, :image, format: 'jpeg', fallback: "noimg.jpg", size: "100x100" %></th></tr>
		    <% end %>
		    </table>
		</div>
	<% end %>
</div>