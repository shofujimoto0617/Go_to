<div class="row">
	<div class="col-10 offset-1">
		<div class="heading">
			<h1 class="heading-text">Follower Users</h1>
		</div>
	</div>
</div>


<% if @users.count > 0 %>
	<div class="row">
    	<div class="col-md-10 offset-1">
	   		<table class="table DM">
	   			<thead>
	   				<tr>
	   					<th>image</th>
	   					<th>name</th>
	   					<th>introduction</th>
	   				</tr>
	   			</thead>
	   			<tbody>
	   			<% @users.each do |user| %>
    				<tr>
	    	            <td>
	   		            	<%= attachment_image_tag user, :image, format: 'jpeg', fallback: "noimg.jpg", size: "100x100", class: "rounded-circle" %>
	   		            <td>
	   		            <td>
	   		                <% if user.account_name.present? %>
	   					        <%= link_to user.account_name, user_path(user.id) %>
	   					    <% else %>
	   			                <%= link_to user.user_name, user_path(user.id) %>
	   				        <% end %>
	   				    </td>
	   				    <td><%= user.introduction %></td>
	   				</tr>
	    		<% end %>
	   			</tbody>
	   		</table>
	   	</div>
    </div>
<% else %>
    <div class="row">
        <div class="col-md-10 offset-1">
    	    <p>フォローしているユーザーはいません</p>
        </div>
    </div>
<% end %>
